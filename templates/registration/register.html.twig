{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscrivez-vous</h1>
                {{ form_start(registrationForm) }}

                    {{ form_label(registrationForm.email) }}

                    {% if registrationForm.email.vars.errors|length > 0 %}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'is-invalid form-control' }}) }}
                        <div class="invalid-feedback mb-2">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    {% elseif registrationForm.email.vars.errors|length <= 0 and formSubmitted %}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'is-valid form-control' }}) }}
                        <div class="valid-feedback mb-2">
                            Email correct
                        </div>
                    {% else %}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control' }}) }}
                    {% endif %}

                    {{ form_label(registrationForm.username) }}

                    {% if registrationForm.username.vars.errors|length > 0 %}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'is-invalid form-control' }}) }}
                        <div class="invalid-feedback mb-2">
                            {{ form_errors(registrationForm.username) }}
                        </div>
                    {% elseif registrationForm.username.vars.errors|length <= 0 and formSubmitted %}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'is-valid form-control' }}) }}
                        <div class="valid-feedback mb-2">
                            Nom d'utilisateur correct
                        </div>
                    {% else %}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control' }}) }}
                    {% endif %}

                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': registrationForm.plainPassword.vars.errors|length > 0 ? 'is-invalid form-control' : 'form-control' }}) }}
                    <div class="invalid-feedback mb-2">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="mt-3">
                        <label for="registration_form_agreeTerms" class="required">J'accepte les <a href="{{ path('rgpd') }}">Conditions Générales d'Utilisation</a> et reconnais avoir été informé que mes données personnelles seront utilisées tel que décrit dans la <a href="{{ path('rgpd') }}">Politique de protection des données personnelles</a></label>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn delicious-btn my-3">S'inscrire</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
