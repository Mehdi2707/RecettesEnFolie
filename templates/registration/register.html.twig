{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscrivez-vous</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.username, {
                    label: 'Nom d\'utilisateur'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                <div class="mt-3">
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'J\'accepte les <a href="' ~ path('rgpd') ~ '">Conditions Générales d\'Utilisation</a> et reconnais avoir été informé que mes données personnelles seront utilisées tel que décrit dans la <a href="' ~ path('rgpd') ~ '">Politique de protection des données personnelles</a>',
                        label_html: true
                    }) }}
                </div>

                <button type="submit" class="btn btn-success btn-lg my-3">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
