{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <section class="container my-3">
        <div class="row">
            <div class="col">
                <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
                {{ form_start(requestPassForm) }}
                    {{ form_row(requestPassForm.email) }}
                    <button class="btn btn-lg btn-primary mb-2" type="submit">
                        Envoyer
                    </button>
                {{ form_end(requestPassForm) }}
            </div>
        </div>
    </section>
{% endblock %}
