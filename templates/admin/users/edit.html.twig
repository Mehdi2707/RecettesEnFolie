{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur (Administration){% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                {% include "_partials/_adminnav.html.twig" %}
                <h1>Modifier un utilisateur</h1>
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.roles) }}
                    {{ form_row(form.isVerified) }}
                    <button type="submit" class="btn btn-primary btn-lg my-3">Modifier</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}