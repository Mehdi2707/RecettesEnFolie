{% extends 'base.html.twig' %}

{% block title %}Recettes {{ childCategory.slug starts with 'entree' ? 'd\'' : 'de '}}{{ childCategory.name|capitalize }}{% endblock %}

{% block body %}
    <nav class="navbar navbar-light bg-light" style="justify-content: center!important;">
        <a class="nav-link" style="text-transform: capitalize;" href="{{ path('recipes_category', {category: parentCategory.slug}) }}">
            {{ parentCategory.name }}
        </a>
        <span>/</span>
        <a class="nav-link" style="text-transform: capitalize;" href="{{ path('recipes_sousCategory', {category: parentCategory.slug, sCategory:childCategory.slug}) }}">
            {{ childCategory.name }}
        </a>
    </nav>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading mt-3">
                        <h3>Recettes {{ childCategory.slug starts with 'entree' ? 'd\'' : 'de '}}{{ childCategory.name|capitalize }}</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                {% if recipes is not empty %}
                    {% for recipe in recipes %}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <a href="{{ path('recipes_details', {slug: recipe.slug, category: recipe.categories.parent.slug, sCategory: recipe.categories.slug}) }}">
                                <div class="single-best-receipe-area mb-30 text-center">
                                    <img style="height: 15rem;" src="{% if recipe.images[0] is defined %}{{ asset('assets/uploads/recipes/' ~ recipe.images[0].name) }}{% else %}{{ asset('assets/img/bg-img/r5.jpg') }}{% endif %}" alt="{{ recipe.title }}">
                                    <div class="receipe-content">
                                        <h5>{{ recipe.title }}</h5>
                                        <div class="ratings">
                                            {% set recipeStars = { recipe } %}
                                            {% include '_partials/_stars.html.twig' with recipeStars %}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-12 mb-3">
                        <span>Aucune recette dans cette cat√©gorie</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
